<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.flaviomassimo.obd_second.MainActivityScreen"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/ImageCar"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button

        android:id="@+id/buttonConnect"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="204dp"
        android:background="#FFFDDB42"
        android:onClick="bluetoothConnectClick"
        android:text="Search for Bluetooth"
        android:textColor="#FF2B2A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton

        android:id="@+id/lineButton"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="148dp"
        android:background="#FFFDDB42"
        android:onClick="buttonClickGraph"
        app:layout_constraintBottom_toTopOf="@+id/buttonConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toEndOf="@+id/carButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/line_graph" />

    <ImageButton
        android:id="@+id/carButton"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="148dp"
        android:background="#FFFDDB42"
        android:onClick="buttonClickCar"
        app:layout_constraintBottom_toTopOf="@+id/buttonConnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/auto" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="316dp"
        android:layout_height="99dp"
        android:layout_marginBottom="436dp"
        android:layout_marginStart="52dp"
        android:fontFamily="@font/biorhyme"
        android:text="CarCare"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFDDB42"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonConnect"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="102dp"
        android:layout_height="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/biorhyme"
        android:text="Car Details"
        android:textColor="#FFFDDB42"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carButton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/biorhyme"
        android:text="RPM LineChart"
        android:textColor="#FFFDDB42"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/lineButton" />

    <Button
        android:id="@+id/buttonDisconnect"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFDDB42"
        android:onClick="bluetoothDisconnectClick"
        android:text="Disconnect Bluetooth"
        android:textColor="#FF2B2A2A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
